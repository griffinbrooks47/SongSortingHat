/**
 * Images
 */
model DBArtistImg {
  id     String @id @default(uuid())
  width  Int
  height Int
  url    String @unique

  artist   DBArtist @relation(fields: [artistId], references: [id])
  artistId String

  @@index([artistId])
}

model DBAlbumImg {
  id     String @id @default(uuid())
  width  Int
  height Int
  url    String @unique

  album   DBAlbum?  @relation(fields: [albumId], references: [id])
  albumId String?
  tracks  DBTrack[] // Implicit many-to-many relation

  @@index([albumId])
  @@index([url])
}
