/**
 * Album
 */
model DBAlbum {
  /**
   * Identifiers
   */
  id        String @id @default(uuid())
  spotifyId String @unique

  /**
   * Database records
   */
  last_updated DateTime @default(now())

  /**
   * Metadata
   */
  title         String
  total_tracks  Int
  release_date  String
  external_urls Json?

  /**
   * Album Artists
   * Usually one artist, but can be multiple.
   */
  artists DBArtist[]

  /**
   * Tracks on this album.
   */
  tracks DBTrack[]

  /**
   * Images
   */
  images DBAlbumImg[]
}
